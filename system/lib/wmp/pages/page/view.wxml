<wxs src="../common/helper.wxs" module="helper" />

<view wx:if="{{!loading}}">
  <!-- 导入公共 header -->
  <include src="../common/header.wxml" />

  <!-- 导入布局模板 -->
  <import src="../../block/layout.tpl.wxml" />

  <!-- 单页详情顶部布局 -->
  <view class="layout layout-top">
    <template wx:if="{{layouts.page_view && layouts.page_view.top}}" is="layout" data="{{blocks: layouts.page_view.top}}" />
  </view>

  <view class="container">
    <view class="heading">
      <text class="title strong no-padding">{{data.page.title}}</text>
    </view>

    <view class="content fluid has-padding">
      <rich-text nodes="{{data.page.content}}" />
    </view>
  </view>

  <!-- 单页详情底部布局 -->
  <view class="layout layout-bottom">
    <template wx:if="{{layouts.page_view && layouts.page_view.bottom}}" is="layout" data="{{blocks: layouts.page_view.bottom}}" />
  </view>

  <!-- 导入公共 footer -->
  <include src="../common/footer.wxml" />
</view>